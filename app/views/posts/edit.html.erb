<h1>Edit a Post</h1>

<!-- TODO: Would be a good idea to wrap this
           code in a reusable snippet... -->
<% if @post.errors.any? %>
    <h2>The following errors prevented the post from saving:</h2>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>