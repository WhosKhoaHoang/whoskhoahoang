<h1>Showing selected post</h1>

<p>
    Title: <%= @post.title %>
</p>

<p>
    Description: <%= @post.description %>
</p>

<p>
    <%= link_to "Back", posts_path %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete,
        data: { confirm: "Are you sure?" } %>
</p>
